//	Para usar esta fonte no computador, ela é a Patua One
@if index($uso-classes, fonte-serifa) {
  @font-face {
    font-family: 'serifa-titulo';
    src: url('<%= asset_path('fontes/serifatitulo-regular-webfont.eot') %>');
    src: url('<%= asset_path('fontes/serifatitulo-regular-webfont.eot') %>?#iefix') format('embedded-opentype'),
    url('<%= asset_path('fontes/serifatitulo-regular-webfont.woff') %>') format('woff'),
    url('<%= asset_path('fontes/serifatitulo-regular-webfont.ttf') %>') format('truetype'),
    url('<%= asset_path('fontes/serifatitulo-regular-webfont.svg') %>#serifa-titulo') format('svg');
    font-weight: bold;
    font-style: normal;

  }
}


